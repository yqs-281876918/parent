<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.mixed.exam.admin.mapper.RoleMapper">
    <update id="updateMul" parameterType="String">
        delete
        from users
        <where>
            username in
            <foreach collection="array" item="username"
                     open="(" close=")" separator=",">
                #{username}
            </foreach>
        </where>

    </update>
    <update id="update">
        update users

    </update>
    <update id="UpdateInfo" parameterType="org.mixed.exam.admin.pojo.dto.usersDto">
        update users
        set username=#{username},
            realName=#{realName},
            role=#{role}
        where username=#{username}

    </update>

    <select id="findAll" resultType="org.mixed.exam.admin.pojo.dto.usersDto">
        SELECT
            username,realName,role
        from users

    </select>
</mapper>